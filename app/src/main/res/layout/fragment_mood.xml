<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin"
    tools:context="michaelbumes.therapysupportapp.fragments.MoodFragment">

    <TextView
        android:id="@+id/text_mood"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="Wie fühlen Sie sich heute?"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/actionBarText"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/mood_view"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_mood"
        android:background="@drawable/border"
        android:adjustViewBounds="false"
        android:src="@drawable/mood_color" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mood_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Hinzufügen"
        android:textAlignment="center" />
</RelativeLayout>
