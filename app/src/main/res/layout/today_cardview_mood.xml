<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:id="@+id/today_card_view_mood"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_view_depressive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:layout_marginTop="8dp"
                android:text="Depressiv"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_mania"
                android:layout_width="wrap_content"
                android:layout_marginRight="18dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="Manisch"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/today_mood_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:layout_below="@+id/text_view_depressive"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp">


            <Button
                android:id="@+id/today_mood_button_0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/mood_0"
                android:text="-3"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/today_mood_button_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/mood_1"
                android:text="-2"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/today_mood_button_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/mood_2"
                android:text="-1"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/today_mood_button_nomal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/mood_normal"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:id="@+id/today_mood_button_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/mood_3"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/today_mood_button_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/mood_4"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/today_mood_button_5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/mood_5"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="24sp" />


        </LinearLayout>

        <Button
            android:id="@+id/today_expand_mood_button"
            android:layout_width="222dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_button_accent"
            android:drawablePadding="-60dp"
            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:text="Mehr anzeigen"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="18sp" />
        <android.support.v7.widget.CardView
            android:visibility="gone"
            android:id="@+id/today_mood_expanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view_mood"
            android:layout_centerHorizontal="true"
            android:animateLayoutChanges="true">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true">

                <TextView
                    android:id="@+id/today_text_mood_expaned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Erweiterte Eingabe"
                    android:textAlignment="center"
                    android:textColor="@color/actionBarText"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/today_relative_layout_mood_1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/today_text_mood_expaned"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Besorgt"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Unbeschwert"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <SeekBar
                        android:id="@+id/today_seek_bar_mood_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="-15dp"

                        android:paddingBottom="10dp"
                        android:paddingTop="20dp"
                        android:progress="4"
                        android:progressDrawable="@drawable/seekbar_custom"
                        android:splitTrack="false"
                        android:thumb="@drawable/thumb_custom" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/today_relative_layout_mood_2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/today_relative_layout_mood_1"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Abgelenkt"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Konzentriert"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <SeekBar
                        android:id="@+id/today_seek_bar_mood_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="-15dp"

                        android:paddingBottom="10dp"
                        android:paddingTop="20dp"
                        android:progress="4"
                        android:progressDrawable="@drawable/seekbar_custom"
                        android:splitTrack="false"
                        android:thumb="@drawable/thumb_custom" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/today_relative_layout_mood_3"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/today_relative_layout_mood_2"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Ängstlich"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Furchtlos"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <SeekBar
                        android:id="@+id/today_seek_bar_mood_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="-15dp"

                        android:paddingBottom="10dp"
                        android:paddingTop="20dp"
                        android:progress="4"
                        android:progressDrawable="@drawable/seekbar_custom"
                        android:splitTrack="false"
                        android:thumb="@drawable/thumb_custom" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/today_relative_layout_mood_4"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/today_relative_layout_mood_3"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Wertlos"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Wertvoll"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <SeekBar
                        android:id="@+id/today_seek_bar_mood_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="-15dp"

                        android:paddingBottom="10dp"
                        android:paddingTop="20dp"
                        android:progress="4"
                        android:progressDrawable="@drawable/seekbar_custom"
                        android:splitTrack="false"
                        android:thumb="@drawable/thumb_custom" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/today_relative_layout_mood_5"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/today_relative_layout_mood_4"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Müde"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Energetisch"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <SeekBar
                        android:id="@+id/today_seek_bar_mood_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="-15dp"

                        android:paddingBottom="10dp"
                        android:paddingTop="20dp"
                        android:progress="4"
                        android:progressDrawable="@drawable/seekbar_custom"
                        android:splitTrack="false"
                        android:thumb="@drawable/thumb_custom" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/today_relative_layout_mood_6"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/today_relative_layout_mood_5"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Einsam"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Beteiligt"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <SeekBar
                        android:id="@+id/today_seek_bar_mood_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="-15dp"

                        android:paddingBottom="10dp"
                        android:paddingTop="20dp"
                        android:progress="4"
                        android:progressDrawable="@drawable/seekbar_custom"
                        android:splitTrack="false"
                        android:thumb="@drawable/thumb_custom" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/today_relative_layout_mood_7"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/today_relative_layout_mood_6"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Hoffnungslos"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Hoffnungsvoll"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <SeekBar
                        android:id="@+id/today_seek_bar_mood_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="-15dp"

                        android:paddingBottom="10dp"
                        android:paddingTop="20dp"
                        android:progress="4"
                        android:progressDrawable="@drawable/seekbar_custom"
                        android:splitTrack="false"
                        android:thumb="@drawable/thumb_custom" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/today_relative_layout_mood_8"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/today_relative_layout_mood_7"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Schwerfällig"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Leichtfüßig"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <SeekBar
                        android:id="@+id/today_seek_bar_mood_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="-15dp"

                        android:paddingBottom="10dp"
                        android:paddingTop="20dp"
                        android:progress="4"
                        android:progressDrawable="@drawable/seekbar_custom"
                        android:splitTrack="false"
                        android:thumb="@drawable/thumb_custom" />

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>




    </LinearLayout>


</android.support.v7.widget.CardView>
</LinearLayout>