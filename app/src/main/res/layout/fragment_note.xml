<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    android:layout_marginVertical="@dimen/activity_vertical_margin"
    tools:context="michaelbumes.therapysupportapp.fragments.NoteFragment">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/note_text"
        android:layout_width="0dp"
        android:layout_height="179dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/photo_button"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="12dp"
        android:scaleType="center"
        android:src="@drawable/ic_camera_alt_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/video_button"
        app:layout_constraintTop_toBottomOf="@+id/note_text" />

    <ImageButton
        android:id="@+id/video_button"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        android:layout_marginEnd="160dp"
        android:layout_marginTop="12dp"
        android:scaleType="center"
        android:src="@drawable/ic_videocam_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note_text" />

    <ImageButton
        android:id="@+id/mic_button"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:scaleType="center"
        android:src="@drawable/ic_mic_black_24dp"
        app:layout_constraintStart_toEndOf="@+id/video_button"
        app:layout_constraintTop_toBottomOf="@+id/note_text" />

    <Button
        android:id="@+id/ad_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="144dp"
        android:layout_marginTop="32dp"
        android:text="HinzufÃ¼gen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video_button" />

</android.support.constraint.ConstraintLayout>
