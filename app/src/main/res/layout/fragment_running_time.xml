<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_running_time_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ListView
        android:id="@+id/list_view_running_time_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/radio_group_running_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_button_unlimited_term"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/grey"
            android:layout_margin="14dp"
            android:layoutDirection="rtl"
            android:text="@string/unlimited_term" />

        <RadioButton
            android:id="@+id/radio_button_defined_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:layout_margin="14dp"
            android:layoutDirection="rtl"
            android:text="@string/defined_end_date"
            android:textAlignment="textStart"
            android:textSize="22sp" />

        <RadioButton
            android:id="@+id/radio_button_term_in_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:layout_margin="14dp"
            android:layoutDirection="rtl"
            android:text="@string/term_in_days"
            android:textAlignment="textStart"
            android:textSize="22sp" />
    </RadioGroup>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:layout_marginTop="4dp"
        android:id="@+id/card_view_running_time_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/list_view_running_time_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </android.support.v7.widget.CardView>

</LinearLayout>