<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/image_taken_drug"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="13dp"
                app:srcCompat="@drawable/ic_medical_pills_couple" />

            <TextView
                android:id="@+id/taken_drug_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="90dp"
                android:layout_alignStart="@+id/image_taken_drug"
                android:paddingTop="10dp"
                android:text="LITHIUM"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/taken_drug_dosage_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/taken_drug_name"
                android:layout_marginStart="46dp"
                android:layout_toEndOf="@+id/taken_drug_plan_alarm_time"
                android:text="Program"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/taken_drug_dosage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/taken_drug_name"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/taken_drug_plan_alarm_time"
                android:text="4"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/taken_drug_plan_alarm_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/image_taken_drug"
                android:layout_marginTop="9dp"
                android:background="@color/colorPrimaryDark"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="08:00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>