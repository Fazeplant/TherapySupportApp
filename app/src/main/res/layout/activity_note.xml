<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    android:layout_marginVertical="@dimen/activity_vertical_margin"
    tools:context="michaelbumes.therapysupportapp.activities.NoteActivity">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/note_text"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/relative_layout"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:gravity="top|left"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:hint="Notiz hinzuf端gen..."
                android:inputType="textMultiLine"
                android:selectAllOnFocus="false"
                android:singleLine="false" />



            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relative_layout"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:visibility="gone">

                <VideoView
                    android:id="@+id/note_video"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true">
                </VideoView>

                <ImageView
                    android:id="@+id/note_image"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@color/transparent" />
            </RelativeLayout>


            <Button
                android:id="@+id/photo_button"
                android:drawableLeft="@drawable/ic_camera_alt_black_24dp"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/note_text"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/custom_button_accent"
                android:drawablePadding="-10dp"
                android:paddingStart="10dp"
                android:singleLine="true"

                android:text="Foto hinzuf端gen"
                android:textAlignment="center"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/video_button"
                android:drawableLeft="@drawable/ic_videocam_black_24dp"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"

                android:layout_marginBottom="15dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@+id/note_text"
                android:background="@drawable/custom_button_accent"
                android:drawablePadding="-10dp"
                android:paddingStart="10dp"
                android:singleLine="true"

                android:text="Video hinzuf端gen"
                android:textAlignment="center"
                android:textAllCaps="false" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/ad_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button_fade"
        android:text="Hinzuf端gen"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>
