<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    android:layout_marginVertical="@dimen/activity_vertical_margin"
    tools:context="michaelbumes.therapysupportapp.activities.NoteActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/note_text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relative_layout"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:gravity="top|left"
            android:hint="Notiz hinzuf端gen..."
            android:inputType="textMultiLine"
            android:selectAllOnFocus="false"
            android:singleLine="false" />


        <Button
            android:id="@+id/ad_note"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photo_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button_primary"
            android:text="Hinzuf端gen" />


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:visibility="gone">

            <VideoView
                android:id="@+id/note_video"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"></VideoView>

            <ImageView
                android:id="@+id/note_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@color/transparent" />
        </RelativeLayout>


        <Button
            android:id="@+id/photo_button"
            android:drawableLeft="@drawable/ic_camera_alt_black_24dp"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/note_text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/custom_button_accent"
            android:drawablePadding="-10dp"
            android:paddingLeft="10dp"
            android:singleLine="true"

            android:text="Foto hinzuf端gen"
            android:textAlignment="center"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/video_button"
            android:drawableLeft="@drawable/ic_videocam_black_24dp"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/note_text"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button_accent"
            android:drawablePadding="-10dp"
            android:paddingLeft="10dp"
            android:singleLine="true"

            android:text="Foto hinzuf端gen"
            android:textAlignment="center"
            android:textAllCaps="false" />


    </RelativeLayout>


</ScrollView>

