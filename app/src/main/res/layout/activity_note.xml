<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    android:layout_marginVertical="@dimen/activity_vertical_margin"
    tools:context="michaelbumes.therapysupportapp.activities.NoteActivity">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/note_text"
        android:hint="Notiz hinzufügen..."
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="false"
        android:singleLine="false" />

    <ImageButton
        android:id="@+id/photo_button"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_camera_alt_black_24dp"
        android:layout_below="@+id/note_text"

        />

    <ImageButton
        android:id="@+id/video_button"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        android:src="@drawable/ic_videocam_black_24dp"
        android:layout_below="@+id/note_text"
        android:layout_toRightOf="@id/photo_button"
        android:layout_marginLeft="50dp"

        />

    <ImageButton
        android:id="@+id/mic_button"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        android:src="@drawable/ic_mic_black_24dp"
        android:layout_below="@+id/note_text"

        android:layout_toLeftOf="@id/photo_button"
        android:layout_marginRight="50dp"
        />

    <Button
        android:id="@+id/ad_note"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:text="Hinzufügen"
        android:layout_below="@+id/note_image"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/note_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/photo_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@color/transparent"
        />

    <VideoView
        android:id="@+id/note_video"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/photo_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:alpha="0"
        tools:visibility="gone"
        />

</RelativeLayout>
