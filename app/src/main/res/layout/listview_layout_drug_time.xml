<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/text_view_drug_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_marginLeft="8dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/image_button_drug_time"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
            android:text="08:00"
            android:drawablePadding="-10dp"
            android:textSize="24dp"
            android:textStyle="bold"
             />
        <TextView
            android:id="@+id/text_view_drug_time_dosage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="4dp"
            
            android:textSize="24dp"
            android:textStyle="bold"
            android:maxLines="1"
            android:layout_alignParentTop="true"

            android:gravity="center_vertical"
            android:text="1"
            android:layout_toLeftOf="@id/text_view_drug_time_dosage_form"
             />

        <TextView
            android:id="@+id/text_view_drug_time_dosage_form"
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-10dp"
            android:drawablePadding="-10dp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
            android:text="Milliliter"
            android:textSize="24dp"
            android:textStyle="bold"
             />

        <ImageButton
            android:id="@+id/image_button_drug_time"
            android:layout_width="wrap_content"
            android:paddingTop="9dp"
            android:background="@null"
            android:layout_alignParentStart="true"
            android:scaleType="center"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:srcCompat="@android:drawable/ic_delete" />

    </RelativeLayout>

</LinearLayout>
